{
  "name": "telegram-bot-starter",
  "version": "1.0.0",
  "description": "Telegram bot starter based on grammY",
  "main": "src/app.ts",
  "scripts": {
    "start": "npx tsc && node ./build/app.js",
    "develop": "tsc-watch --skipLibCheck --onSuccess node src/app.ts",
    "build-ts": "tsc --skipLibCheck",
    "lint": "npm run pretty && eslint --max-warnings 0 --ext ts,tsx,json src"
  },
  "dependencies": {
    "@grammyjs/i18n": "^0.5.0",
    "@grammyjs/menu": "^1.0.4",
    "@grammyjs/runner": "^2.0.3",
    "@types/string-similarity": "^4.0.2",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.2",
    "grammy": "^1.19.3",
    "grammy-middlewares": "^1.0.11",
    "js-yaml": "^4.1.0",
    "mongoose": "^6.1.0",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^16.11.12",
    "source-map-support": "^0.5.21",
    "typescript": "^4.5.2"
  }
}
